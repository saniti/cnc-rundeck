[ {
  "defaultTab" : "nodes",
  "description" : "Discover devices in CNC, which is used for inputs into other services",
  "executionEnabled" : true,
  "group" : "CNC/Devices",
  "id" : "fe7a67f3-81bf-44c0-9361-fd2d7afb3cab",
  "loglevel" : "INFO",
  "name" : "CNC - Device Details (all)",
  "nodeFilterEditable" : false,
  "notification" : {
    "onsuccess" : {
      "email" : {
        "recipients" : "device-details@necehealthpoc.local,siprice@cisco.com",
        "subject" : "${notification.eventStatus} ${job.name}"
      }
    }
  },
  "notifyAvgDurationThreshold" : null,
  "options" : [ {
    "enforced" : true,
    "label" : "CW POD",
    "name" : "cnc-pod",
    "required" : true,
    "valuesUrl" : "file:/opt/cw/options/cw-environments.json"
  }, {
    "enforced" : true,
    "label" : "Devices from last discovery",
    "name" : "devices",
    "valuesUrl" : "file:/opt/cw/options/${option.cnc-pod.value}-devices.json"
  } ],
  "plugins" : {
    "ExecutionLifecycle" : null
  },
  "scheduleEnabled" : true,
  "sequence" : {
    "commands" : [ {
      "jobref" : {
        "group" : "CNC/Configuration",
        "importOptions" : true,
        "name" : "get key vars",
        "uuid" : "c3b0db66-3fdd-49b7-a5b5-4261a0ff3463"
      }
    }, {
      "configuration" : {
        "command" : "echo  ${export.mgtvip} ${export.cwtoken}"
      },
      "nodeStep" : true,
      "type" : "localexec"
    }, {
      "configuration" : {
        "authentication" : "None",
        "body" : "{\"filter\":{},\"filterData\":{\"PageSize\":200,\"PageNum\":0,\"Criteria\":\"\"}}",
        "checkResponseCode" : "false",
        "file" : "/opt/cw/tmp/devicelist.tmp",
        "headers" : "{\"Content-Type\": \"application/json\",\"Authorization\": \"Bearer ${export.cwtoken}\"}",
        "method" : "POST",
        "printResponse" : "true",
        "printResponseToFile" : "true",
        "proxySettings" : "false",
        "remoteUrl" : "https://${export.mgtvip}:30603/crosswork/inventory/v1/nodes/query",
        "sslVerify" : "false",
        "timeout" : "30000"
      },
      "description" : "get device list",
      "nodeStep" : false,
      "plugins" : {
        "LogFilter" : [ {
          "config" : {
            "datatype" : "application/json",
            "sanitizeHtml" : "true",
            "striped" : "true"
          },
          "type" : "render-datatype"
        } ]
      },
      "type" : "edu.ohio.ais.rundeck.HttpWorkflowStepPlugin"
    }, {
      "configuration" : {
        "command" : "jq '[.data[] | {\"host\":.host_name,\"id\":.uuid,\"ip\":.node_ip.inet_addr,\"platform\":.product_info.software_type,\"version\":.product_info.software_version,\"router_id\":.routing_info.te_router_id,\"state\":.operational_state,\"nso\":.nso_state}]' /opt/cw/tmp/devicelist.tmp"
      },
      "description" : "show abbreviated",
      "nodeStep" : true,
      "plugins" : {
        "LogFilter" : [ {
          "config" : {
            "datatype" : "application/json",
            "sanitizeHtml" : "true",
            "striped" : "true"
          },
          "type" : "render-datatype"
        }, {
          "config" : {
            "invalidKeyPattern" : "\\s|\\$|\\{|\\}|\\\\",
            "logData" : "true",
            "name" : "device-data",
            "regex" : "(.*)"
          },
          "type" : "key-value-data"
        } ]
      },
      "type" : "localexec"
    }, {
      "description" : "generate short list",
      "script" : "#jq '[.[] | {\"name\":(.host+\":\"+.ip+\":\"+.platform),\"value\":.host}]' /opt/cw/tmp/devicelist.tmp > /opt/cw/options/@option.cnc-pod@-devices.json\n#jq '[.[] | {\"name\":(.host+\":\"+.ip+\":\"+.platform),\"value\":.host}]' /opt/cw/tmp/devicelist.tmp > /opt/cw/options/@option.cnc-pod@-devices-short.json\njq '[.data[] | {\"host\":.host_name,\"id\":.uuid,\"ip\":.node_ip.inet_addr,\"platform\":.product_info.software_type,\"version\":.product_info.software_version,\"router_id\":.routing_info.te_router_id,\"state\":.operational_state,\"nso\":.nso_state}]' /opt/cw/tmp/devicelist.tmp > /opt/cw/options/@option.cnc-pod@-devices-short.json"
    }, {
      "description" : "save device list",
      "script" : "jq '[.[] | {\"name\":(.host+\" : [\"+.ip+\":\"+.platform+\"]\"),\"value\":.host,\"ip\":.ip,\"platform\":.platform,\"version\":.version,\"router_id\":.router_id,\"id\":.id}]' /opt/cw/options/@option.cnc-pod@-devices-short.json > /opt/cw/options/@option.cnc-pod@-devices.json"
    } ],
    "keepgoing" : false,
    "strategy" : "node-first"
  },
  "uuid" : "fe7a67f3-81bf-44c0-9361-fd2d7afb3cab"
} ]
